<div class="pic-and-names">
  <div class="profile-picture">
    <span class="fa fa-user fa-9x"/>
  </div>
  <div class="display-name">
    <% unless @intern.present_in_tw %>
      <span class='fa fa-ban not-in-tw'></span>
    <% end %>
    <%= @intern.display_name %>
  </div>
  <div class="full-name">
    <span> <%= @intern.first_name %> </span>
    <span> <%= @intern.last_name %> </span>
  </div>

  <div class="actions">
    <div class="action">
      <%= link_to(edit_intern_path(@intern)) do %>
        <span class="fa fa-edit fa-lg"/>
      <% end %>
    </div>
    <div class="action">
      <%= link_to(@intern, method: :delete, data: {confirm: 'Are you sure?'}) do %>
        <span class="fa fa-trash fa-lg"/>
      <% end %>
    </div>

    <div class="action">
      <%= link_to(intern_path(@intern, intern: {present_in_tw: !@intern.present_in_tw}), method: :patch) do %>
        <% if @intern.present_in_tw %>
          <span class='fa fa-ban fa-lg'></span>
        <% else %>
          <span class='fa fa-undo fa-lg'></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>