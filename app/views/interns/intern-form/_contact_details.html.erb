<div class="panel">
  <div class="panel-heading"> Contact Details </div>
  <div class="attributes">
    <div class="attribute">
      <div class="field"> Emails </div>
      <div class="value">
        <%= form.fields_for :emails do |email_fields| %>
          <div class="email-attribute">
            <div class="email-category"> <%= email_fields.object.category %> </div>
            <%= email_fields.hidden_field :category %>
            <div class="email-address"> <%= email_fields.text_field :address, placeholder: "#{email_fields.object.category} email address"  %> </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="attribute">
      <div class="field"> Phone Number </div>
      <div class="value"> <%= form.text_field :phone_number, placeholder: 'Phone number'  %> </div>
    </div>
  </div>
</div>